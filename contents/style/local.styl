


local-accent-color =  #066b4d
local-highlight-color = #aeffe7
local-gutter-color = #706e6f
local-background-color = #d7d7d7
local-action-color = #06a978

local-headline-font()
  font-family: 'Eurostile', Helvetica, serif;
  font-size: 24pt;
  text-transform: uppercase


local-font()
  font-family: Helvetica, Arial, sans-serif;
  color: local-accent-color
  font-size: 16pt
  font-weight: 300


@font-face 
  font-family: 'Eurostile';
  src: url('/fonts/eurostile-webfont.eot?') format('eot'), url('/fonts/eurostile-webfont.woff') format('woff'), url('/fonts/eurostile-webfont.ttf') format('truetype');

@font-face 
  font-family: 'Eurostile-bold';
  src: url('/fonts/eurostile-bold-webfont.eot?') format('eot'), url('/fonts/eurostile-bold-webfont.woff') format('woff'), url('/fonts/eurostile-bold-webfont.ttf') format('truetype');

